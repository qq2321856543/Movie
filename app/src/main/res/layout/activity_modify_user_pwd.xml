<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".activity.ModifyUserPwdActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/iv_shape"
        android:src="@mipmap/shape"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置密码"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/iv_shape"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="100dp"
        android:textColor="#FDFDFE"
        android:textSize="16sp"/>
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_below="@id/iv_shape"
        android:layout_width="match_parent"
        android:background="#1C2243"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#FDFDFE"/>
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_pwd"
            android:background="@null"
            android:textColor="#FDFDFE"
            android:hint="请输入原密码"
            android:textColorHint="#ccc"
            android:paddingRight="20dp"
            android:gravity="right|center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_below="@id/rl1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="#1C2243"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_newpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置新密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#FDFDFE"/>
        <EditText
            android:id="@+id/et_newpwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_newpwd"
            android:background="@null"
            android:textColor="#FDFDFE"
            android:hint="请输入新密码"
            android:textColorHint="#ccc"
            android:paddingRight="20dp"
            android:gravity="right|center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_below="@id/rl2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="#1C2243"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_newpwd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置新密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#FDFDFE"/>
        <EditText
            android:id="@+id/et_newpwd2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_newpwd2"
            android:background="@null"
            android:textColor="#FDFDFE"
            android:hint="请再次输入新密码"
            android:textColorHint="#ccc"
            android:paddingRight="20dp"
            android:gravity="right|center_vertical"/>
    </RelativeLayout>
    <Button
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/yuan6"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#FDFDFE"
        android:layout_marginBottom="60dp"
        android:text="确定"/>
</RelativeLayout>