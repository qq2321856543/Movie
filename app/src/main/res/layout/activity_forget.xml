<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.ForgetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:background="@mipmap/back"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:src="@mipmap/shape"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="100dp"
            android:textColor="#FDFDFE"
            android:textSize="16sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:background="#141931"
        android:layout_height="0dp">
        <EditText
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:hint="请输入邮箱账号"
            android:textColor="#F9F9F9"
            android:textColorHint="#555764"
            android:id="@+id/email"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yuan"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:hint="请输入验证码"
            android:password="true"
            android:textColor="#F9F9F9"
            android:textColorHint="#555764"
            android:layout_below="@id/email"
            android:id="@+id/pwd"
            android:layout_alignLeft="@id/email"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yuan1"/>
        <Button
            android:layout_width="112dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/pwd"
            android:layout_marginTop="10dp"
            android:layout_below="@id/email"
            android:text="获取验证码"
            android:id="@+id/bt_get"
            android:background="@drawable/yuan2"/>
        <SeekBar
            android:layout_width="321dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/yuan"
            android:layout_below="@id/bt_get"
            android:max="100"
            android:maxHeight="45dp"
            android:minHeight="45dp"
            android:progress="0"
            android:clickable="false"
            android:progressDrawable="@mipmap/back"
            android:thumb="@mipmap/wang"
            android:id="@+id/sb_progress"
            android:thumbOffset="-1dp"
            android:padding="1dp"/>
        <EditText
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:hint="请设置新密码"
            android:textColor="#F9F9F9"
            android:textColorHint="#555764"
            android:id="@+id/et_newpwd"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sb_progress"
            android:background="@drawable/yuan"/>

        <Button
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:layout_below="@id/et_newpwd"
            android:id="@+id/tv_deng"
            android:textColor="#FDFDFE"
            android:background="@drawable/yuan4"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="登录"/>




    </RelativeLayout>
</LinearLayout>