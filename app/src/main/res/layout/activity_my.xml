<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".activity.MyActivity">
    <ImageView
        android:layout_width="16dp"
        android:layout_height="22dp"
        android:src="@mipmap/shape"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="40dp"
        android:id="@+id/iv_shap"/>
    <TextView
        android:layout_width="32dp"
        android:text="我的"
        android:textSize="16sp"
        android:layout_height="22dp"
        android:textColor="#FDFDFE"
        android:layout_alignBottom="@id/iv_shap"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="312dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/myyuan1"
        android:layout_marginTop="80dp"
        android:layout_height="178dp">

            <TextView
                android:id="@+id/tv_tou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#deffffff"
                android:text="头         像"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/sdv"
                fresco:roundAsCircle="true"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:placeholderImage="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#deffffff"
            android:text="昵         称"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/tv_tou"
            android:layout_below="@id/tv_tou"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="电影故事"
            android:textColor="#deaaaaaa"
            android:layout_alignRight="@id/sdv"
            android:layout_alignBottom="@id/tv_name"/>
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#deffffff"
            android:text="性         别"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"/>
        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="男"
            android:textColor="#deaaaaaa"
            android:layout_alignRight="@id/sdv"
            android:layout_alignBottom="@id/tv_sex"/>
        <TextView
            android:id="@+id/tv_riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#deffffff"
            android:text="出生日期"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/tv_sex"
            android:layout_below="@id/tv_sex"/>
        <TextView
            android:id="@+id/riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="男"
            android:textColor="#deaaaaaa"
            android:layout_alignRight="@id/sdv"
            android:layout_alignBottom="@id/tv_riqi"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl"
        android:layout_width="312dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/myyuan1"
        android:layout_height="54dp">
        <TextView
            android:id="@+id/tv_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="#deffffff"
            android:text="邮         箱"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_youxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#deffffff"
            android:layout_alignBottom="@id/tv_you"
            android:text="fdsafas"/>
    </RelativeLayout>
</RelativeLayout>