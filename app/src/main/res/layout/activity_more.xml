<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".activity.MoreActivity">
    <ImageView
        android:id="@+id/iv_shape"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp24" 
        android:src="@mipmap/shape"
        android:layout_alignBottom="@id/iv_search"
        android:layout_marginLeft="@dimen/dp20"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:id="@+id/iv_search"
        android:src="@mipmap/icon_search"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp20"
        android:layout_marginRight="20dp"/>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_below="@id/iv_search"
        android:layout_marginTop="@dimen/dp20"
        android:background="#1C2243"
        app:tabTextColor="#FDFDFE"
        android:id="@+id/tab"
        android:layout_height="@dimen/dp38">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_below="@id/tab"
        android:layout_marginTop="@dimen/dp10"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</RelativeLayout>