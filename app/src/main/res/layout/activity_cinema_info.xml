<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".activity.CinemaInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl1"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/iv_shape"
            android:src="@mipmap/shape"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影院详情"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/iv_shape"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="100dp"
            android:textColor="#FDFDFE"
            android:textSize="16sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_below="@id/rl1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#FDFDFE"
        android:text="保利国际影城（龙旗广场店）"/>
    <ImageView
        android:id="@+id/iv_xin"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:src="@mipmap/xin"
        android:layout_alignBottom="@id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/tv_type"
        android:layout_below="@id/tv_name"
        android:layout_alignLeft="@id/tv_name"
        android:text="3d眼镜"
        android:layout_marginTop="20dp"
        android:textColor="#957E4A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_alignRight="@id/iv_xin"
        android:layout_alignBottom="@id/tv_type"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lubiao"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FDFDFE"
            android:text="到这里去"/>
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_below="@id/ll"
        android:layout_marginTop="10dp"
        app:tabTextColor="#FDFDFE"
        android:background="#1C2243"
        android:layout_width="match_parent"
        android:layout_height="38dp">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_below="@id/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
    <TextView
        android:id="@+id/tv_chakan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="查看该影院电影排期"
        android:gravity="center"
        android:textColor="#FDFDFE"
        android:background="#E7185E"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>