<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#1C2243"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp" 
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:id="@+id/iv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/tv_name"
        android:text="阿斯顿撒"
        android:layout_toRightOf="@id/iv"
        android:textColor="#FDFDFE"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@id/iv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dao"
        android:text="阿斯顿撒"
        android:textColor="#FDFDFE"
        android:layout_below="@id/tv_name"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_zhu"
        android:text="阿斯顿撒"
        android:textColor="#FDFDFE"
        android:layout_below="@id/tv_dao"
        android:layout_alignLeft="@id/tv_dao"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ping"
        android:text="阿斯顿撒"
        android:textColor="#FDFDFE"
        android:layout_below="@id/tv_zhu"
        android:layout_alignLeft="@id/tv_zhu"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="购票"
        android:textColor="#FDFDFE"
        android:background="#E7185E"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_ping"
        android:id="@+id/bt_ok"
        android:layout_marginRight="10dp"/>
    </RelativeLayout>

</RelativeLayout>