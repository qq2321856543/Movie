<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".activity.SetupActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/iv_shape"
            android:src="@mipmap/shape"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/iv_shape"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="100dp"
            android:textColor="#FDFDFE"
            android:textSize="16sp"/>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#1C2243"
            android:layout_below="@id/iv_shape">
            <RelativeLayout
                android:id="@+id/rl_qingchu"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="44dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除缓存"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="#FDFDFE"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textColor="#FDFDFE"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="10M"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_banben"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/rl_qingchu"
                android:layout_height="44dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本更新"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="#FDFDFE"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/youbaijiantou"/>
            </RelativeLayout>

        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_chongzhi"
        android:layout_width="match_parent"
        android:layout_below="@id/rl1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#1C2243"
        android:layout_height="44dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#FDFDFE"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/youbaijiantou"/>
    </RelativeLayout>
    <Button
        android:id="@+id/bt_tuichu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="退出登录"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#FDFDFE"
        android:layout_below="@id/rl_chongzhi"
        android:background="#1C2243"/>
</RelativeLayout>