<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.RegisteredActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:background="@mipmap/back"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/iv_shape"
                android:src="@mipmap/shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/iv_shape"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="100dp"
                android:textColor="#FDFDFE"
                android:textSize="16sp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:background="#141931"
        android:layout_height="0dp">
        <EditText
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:hint="请输入昵称"
            android:textColor="#F9F9F9"
            android:textColorHint="#989898"
            android:id="@+id/et_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yuan"/>
        <EditText
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:hint="请输入邮箱账号"
            android:textColor="#F9F9F9"
            android:textColorHint="#989898"
            android:id="@+id/et_email"
            android:layout_below="@id/et_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yuan"/>
        <EditText
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:hint="请设置密码"
            android:textColor="#F9F9F9"
            android:textColorHint="#989898"
            android:id="@+id/et_pwd"
            android:layout_below="@id/et_email"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yuan"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:hint="请输入验证码"
            android:password="true"
            android:textColor="#F9F9F9"
            android:textColorHint="#989898"
            android:layout_below="@id/et_pwd"
            android:id="@+id/pwdcod"
            android:layout_alignLeft="@id/et_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yuan1"/>
        <Button
            android:layout_width="112dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/pwdcod"
            android:layout_marginTop="10dp"
            android:layout_below="@id/et_pwd"
            android:text="获取验证码"
            android:id="@+id/bt_get"
            android:background="@drawable/yuan2"/>
        <TextView
            android:layout_width="84dp"
            android:layout_height="14dp"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_below="@id/bt_get"
            android:layout_alignRight="@id/bt_get"
            android:id="@+id/tv_yi"
            android:layout_marginTop="10dp"
            android:text="已有帐号 立即登录"/>
        <Button
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:layout_below="@id/tv_yi"
            android:id="@+id/bt_zhu"
            android:textColor="#FDFDFE"
            android:background="@drawable/yuan4"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="注册"/>




    </RelativeLayout>
</LinearLayout>